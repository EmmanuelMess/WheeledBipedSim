<?xml version="1.0" ?>
<sdf version="1.11">
  <world name="ground">
    <plugin
      filename="gz-sim-physics-system"
      name="gz::sim::systems::Physics">
    </plugin>
    <plugin
      filename="gz-sim-user-commands-system"
      name="gz::sim::systems::UserCommands">
    </plugin>
    <plugin
      filename="gz-sim-scene-broadcaster-system"
      name="gz::sim::systems::SceneBroadcaster">
    </plugin>
    <plugin
      filename="gz-sim-imu-system"
      name="gz::sim::systems::Imu">
    </plugin>
    
    <physics name="1ms" type="ode">
        <max_step_size>0.001</max_step_size>
        <real_time_factor>1.0</real_time_factor>
    </physics>

    <light type="directional" name="sun">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>0.8 0.8 0.8 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 0.1 -0.9</direction>
    </light>

    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.8 0.8 0.8 1</specular>
          </material>
        </visual>
      </link>
    </model>

    <model name="robot">
      <pose>0 0 0.25 0 0 0</pose>
      <link name="base_link">
        <inertial>
          <mass>0.250</mass>
        </inertial>
        <collision name="collision">
          <geometry>
            <box>
              <size>0.1 0.1 0.1</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>0.1 0.1 0.1</size>
            </box>
          </geometry>
          <material>
            <ambient>1.0 0.0 0.0 1</ambient>
            <diffuse>1.0 0.0 0.0 1</diffuse>
            <specular>1.0 0.0 0.0 1</specular>
          </material>
        </visual>
      </link>

      <link name="imu_link">
        <pose relative_to="base_link">0 0 0 0 0 0</pose>
        <sensor name='imu_gnss' type='imu'>
          <topic>/imu</topic>
          <update_rate>200</update_rate>
          <always_on>true</always_on>
          <visualize>true</visualize>
        </sensor>
      </link>

      <joint name="imu_link_joint" type="fixed">
        <child>imu_link</child>
        <parent>base_link</parent>
      </joint>
      
      <link name="upper_left_leg_link">
        <pose relative_to="base_link">0 0.05 0 1.57 0 0</pose>
        <inertial>
          <mass>0.100</mass>
        </inertial>
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.025</radius>
              <length>0.01</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.5 0.5 0.5 1</ambient>
            <diffuse>0.5 0.5 0.5 1</diffuse>
            <specular>0.5 0.5 0.5 1</specular>
          </material>
        </visual>
        <collision name='collision'>
          <geometry>
            <cylinder>
              <radius>0.025</radius>
              <length>0.01</length>
            </cylinder>
          </geometry>
        </collision>
      </link>

      <joint name="upper_left_leg_joint" type="revolute">
        <axis>
          <xyz>0 0 1</xyz>
          <limit>
            <lower>0</lower>
            <upper>1.57</upper>
          </limit>
          <dynamics>
            <damping>0.5</damping>
          </dynamics>
        </axis>
        <child>upper_left_leg_link</child>
        <parent>base_link</parent>
      </joint>
    
      <link name="lower_left_leg_link">
        <pose relative_to="upper_left_leg_link">-0.1 -0.1 0 0 0 0</pose>
        <inertial>
          <mass>0.100</mass>
        </inertial>
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.025</radius>
              <length>0.01</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.5 0.5 0.5 1</ambient>
            <diffuse>0.5 0.5 0.5 1</diffuse>
            <specular>0.5 0.5 0.5 1</specular>
          </material>
        </visual>
        <collision name='collision'>
          <geometry>
            <cylinder>
              <radius>0.025</radius>
              <length>0.01</length>
            </cylinder>
          </geometry>
        </collision>
      </link>

      <joint name="lower_left_leg_joint" type="revolute">
        <axis>
          <xyz>0 0 1</xyz>
          <limit>
            <lower>0</lower>
            <upper>3.14</upper>
          </limit>
          <dynamics>
            <damping>0.5</damping>
          </dynamics>
        </axis>
        <child>lower_left_leg_link</child>
        <parent>upper_left_leg_link</parent>
      </joint>
      
      <link name="left_wheel_link">
        <pose relative_to="lower_left_leg_link">0.1 -0.1 0 0 0 0</pose>
        <inertial>
          <mass>0.100</mass>
        </inertial>
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.025</radius>
              <length>0.02</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.0 0.0 0.0 1</ambient>
            <diffuse>0.0 0.0 0.0 1</diffuse>
            <specular>0.0 0.0 0.0 1</specular>
          </material>
        </visual>
        <collision name='collision'>
          <geometry>
            <cylinder>
              <radius>0.025</radius>
              <length>0.02</length>
            </cylinder>
          </geometry>
        </collision>
      </link>

      <joint name="left_wheel_joint" type="revolute">
        <axis>
          <xyz>0 0 1</xyz>
        </axis>
        <child>left_wheel_link</child>
        <parent>lower_left_leg_link</parent>
      </joint>
      
      <link name="upper_right_leg_link">
        <pose relative_to="base_link">0 -0.05 0 1.57 0 0</pose>
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.025</radius>
              <length>0.01</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.5 0.5 0.5 1</ambient>
            <diffuse>0.5 0.5 0.5 1</diffuse>
            <specular>0.5 0.5 0.5 1</specular>
          </material>
        </visual>
        <collision name='collision'>
          <geometry>
            <cylinder>
              <radius>0.025</radius>
              <length>0.01</length>
            </cylinder>
          </geometry>
        </collision>
      </link>

      <joint name="upper_right_leg_joint" type="revolute">
        <axis>
          <xyz>0 0 1</xyz>
          <limit>
            <lower>0</lower>
            <upper>1.57</upper>
          </limit>
          <dynamics>
            <damping>0.5</damping>
          </dynamics>
        </axis>
        <child>upper_right_leg_link</child>
        <parent>base_link</parent>
      </joint>
    
      <link name="lower_right_leg_link">
        <pose relative_to="upper_right_leg_link">-0.1 -0.1 0 0 0 0</pose>
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.025</radius>
              <length>0.01</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.5 0.5 0.5 1</ambient>
            <diffuse>0.5 0.5 0.5 1</diffuse>
            <specular>0.5 0.5 0.5 1</specular>
          </material>
        </visual>
        <collision name='collision'>
          <geometry>
            <cylinder>
              <radius>0.025</radius>
              <length>0.01</length>
            </cylinder>
          </geometry>
        </collision>
      </link>

      <joint name="lower_right_leg_joint" type="revolute">
        <axis>
          <xyz>0 0 1</xyz>
          <limit>
            <lower>0</lower>
            <upper>3.14</upper>
          </limit>
          <dynamics>
            <damping>0.5</damping>
          </dynamics>
        </axis>
        <child>lower_right_leg_link</child>
        <parent>upper_right_leg_link</parent>
      </joint>
      
      <link name="right_wheel_link">
        <pose relative_to="lower_right_leg_link">0.1 -0.1 0 0 0 0</pose>
        <inertial>
          <mass>0.100</mass>
          <inertia>
            <ixx>0.043333</ixx>
            <iyy>0.043333</iyy>
            <izz>0.08</izz>
          </inertia>
        </inertial>
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.025</radius>
              <length>0.02</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.0 0.0 0.0 1</ambient>
            <diffuse>0.0 0.0 0.0 1</diffuse>
            <specular>0.0 0.0 0.0 1</specular>
          </material>
        </visual>
        <collision name='collision'>
          <geometry>
            <cylinder>
              <radius>0.025</radius>
              <length>0.02</length>
            </cylinder>
          </geometry>
        </collision>
      </link>

      <joint name="right_wheel_joint" type="revolute">
        <axis>
          <xyz>0 0 1</xyz>
        </axis>
        <child>right_wheel_link</child>
        <parent>lower_right_leg_link</parent>
      </joint>
    </model>
    
    <model name="holder">
      <pose>0 0 0.075 0 0 0</pose>
      <link name="base_link">
        <inertial>
          <mass>1.0</mass>
          <inertia>
            <ixx>0.095329</ixx>
            <iyy>0.381317</iyy>
            <izz>0.476646</izz>
          </inertia>
        </inertial>
        <collision name="collision">
          <geometry>
            <box>
              <size>0.075 0.075 0.15</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>0.075 0.075 0.15</size>
            </box>
          </geometry>
          <material>
            <ambient>0.0 0.0 0.0 1</ambient>
